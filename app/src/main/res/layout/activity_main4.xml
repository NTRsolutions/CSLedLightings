<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.admin.csledlightings.Main4Activity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:id="@+id/ivphotos" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:id="@+id/btnleft"
        android:layout_alignParentLeft="true"
        android:background="#00ffffff"
        android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
        android:gravity="center"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:id="@+id/btnright"
        android:layout_alignParentRight="true"
        android:background="#00FFFFFF"
        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvname"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:layout_below="@+id/ivphotos"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvrs"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:layout_below="@+id/tvname"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvdet"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:text="Product Details"
        android:layout_below="@+id/tvrs" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/v2"
        android:layout_below="@+id/tvdet"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvdetails"
        android:layout_margin="10dp"
        android:layout_below="@+id/v2" />
    </RelativeLayout>
</ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnbuy"
        android:background="#FC641B"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:text="Buy Now"/>

</RelativeLayout>
